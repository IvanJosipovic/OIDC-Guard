{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "timezone": "America/Vancouver",
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "assignees": [
    "@ivanjosipovic"
  ],
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "ignorePaths": [
    "**/docs/**",
    "**/charts/**"
  ],
  "schedule": [
    "before 4am"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "OpenTelemetry.Exporter.Prometheus.AspNetCore",
        "OpenTelemetry.Instrumentation.EventCounters"
      ],
      "ignoreUnstable": false,
      "respectLatest": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchFileNames": [
        "global.json"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "semanticCommitType": "fix",
      "matchFileNames": [
        "src/**"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchFileNames": [
        "tests/**",
        "benchmarks/**"
      ]
    },
    {
      "automerge": true,
      "groupName": "Dockerfile Dependecies",
      "groupSlug": "dockerfile-dependecies",
      "semanticCommitType": "fix",
      "matchPackageNames": [
        "alpine_*"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Kind\\.cs$"],
      "matchStrings": [
        "public const string KubernetesVersion = \"kindest/node:v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\";"
      ],
      "depNameTemplate": "kindest/node",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["Helm\\.cs$"],
      "matchStrings": [
        "private const string HelmVersion = \"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\";"
      ],
      "depNameTemplate": "helm/helm",
      "datasourceTemplate": "github-releases"
    }
  ]
}
